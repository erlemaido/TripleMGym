@{
    Layout = "_Layout";
    ViewData["Title"] = Model.PageTitle;
    var itemId = Model.ItemId;
}
    <p>
        <h1>@ViewData["Title"]</h1>
    </p>
<h3>Oled sa kindel, et soovid seda kustutada?</h3>
<div>
    <hr />
    <dl class="row">
        @RenderBody()
    </dl>
    <form method="post">
        <input type="hidden" asp-for="@itemId" />
        <input type="submit" value="Kustuta" class="btn btn-danger" /> |
        <a asp-page="./Index"
           asp-route-fixedFilter="@Model.FixedFilter"
           asp-route-fixedValue="@Model.FixedValue">Tagasi nimekirja</a>
    </form>
</div>