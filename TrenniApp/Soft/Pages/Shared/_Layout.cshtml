<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sports Club</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Sports Club</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Avaleht</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="SportsClub" asp-page="/Clients/Index">Kliendid</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="SportsClub" asp-page="/Coaches/Index">Treenerid</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="SportsClub" asp-page="/Locations/Index">Asukohad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="SportsClub" asp-page="/ParticipantOfTrainings/Index">Broneeringud</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="SportsClub" asp-page="/TimetableEntries/Index">Tunniplaan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="SportsClub" asp-page="/TrainingCategories/Index">Trenni kategooriad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="SportsClub" asp-page="/Trainings/Index">Trennid</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="SportsClub" asp-page="/TrainingTypes/Index">Trenni tüübid</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Sports Club - <a asp-area="" asp-page="/Privacy">Kontakt</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
