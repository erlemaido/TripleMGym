@page
@using TrainingApp.Aids
@using TrainingApp.Data.SportsClub
@using TrainingApp.Pages.Extensions
@model TrainingApp.Soft.Areas.SportsClub.Pages.Coaches.DetailsModel

@{
    Layout = "_Details";
    const string timetableEntries = "/SportsClub/TimetableEntries";
    var coachId = GetMember.Name<TimetableEntryData>(x => x.CoachId);
}
    
<body>
    @Html.DisplayControlsFor(model => model.Item.FirstName)
    @Html.DisplayControlsFor(model => model.Item.LastName)
    @Html.DisplayControlsFor(model => model.Item.Age)
    @Html.DisplayControlsFor(model => model.Item.Email)
    @Html.DisplayControlsFor(model => model.Item.CoachCertificateNumber)
    @Html.DisplayControlsFor(model => model.Item.HireDate)

</body>

@section Details {
    @Html.HypertextLinkFor(string.Empty, new Link("Show upcoming trainings", $"{timetableEntries}/Index?fixedFilter={coachId}&fixedValue={Model.Item.Id}"))
}
