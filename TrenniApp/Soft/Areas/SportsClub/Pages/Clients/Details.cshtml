@page
@using TrainingApp.Aids
@using TrainingApp.Data.SportsClub
@using TrainingApp.Pages.Extensions
@model TrainingApp.Soft.Areas.SportsClub.Pages.Clients.DetailsModel

@{
    Layout = "_Details";
    const string trainings = "/SportsClub/ParticipantOfTrainings";
    var clientId = GetMember.Name<ParticipantOfTrainingData>(x => x.ClientId);
}

    <body>
        @Html.DisplayControlsFor(model => model.Item.Id)
        @Html.DisplayControlsFor(model => model.Item.Name)
        @Html.DisplayControlsFor(model => model.Item.Email)
        @Html.DisplayControlsFor(model => model.Item.DateOfJoining)
    </body>

@section Details {
    @Html.HypertextLinkFor(string.Empty, new Link("Näita kliendi tulevasi treeninguid", $"{trainings}/Index?fixedFilter={clientId}&fixedValue={Model.Item.Id}"))
}