@page
@using TrainingApp.Aids
@using TrainingApp.Facade.SportsClub
@using TrainingApp.Pages.Extensions
@model TrainingApp.Soft.Areas.SportsClub.Pages.Clients.IndexModel

@{
    Layout = "_Index";
    var page = Model.PageUrl;
}

@section Create {
    @Html.HypertextLinkFor(string.Empty, new Link(Constants.CreateNewLinkTitle, $"{page}/Create"))
}

<body>
    <table class="table">
        <thead>
            @Html.TableHeaderFor(
                new Link(Html.DisplayNameFor(m => m.Item.FirstName), Model.GetSortString(m => m.FirstName, page)),
                new Link(Html.DisplayNameFor(m => m.Item.LastName), Model.GetSortString(m => m.LastName, page)),
                new Link(Html.DisplayNameFor(m => m.Item.IdCode), Model.GetSortString(m => m.IdCode, page)),
                new Link(Html.DisplayNameFor(m => m.Item.Email), Model.GetSortString(m => m.Email, page)),
                new Link(Html.DisplayNameFor(m => m.Item.DateOfJoining), Model.GetSortString(m => m.DateOfJoining, page))
                )
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                var selectedRow = "";
                if (item.Id == Model.SelectedId)
                {
                    selectedRow = "alert-success";
                    Model.LoadDetails(item);
                }
                <tr class=@selectedRow>
                    @Html.TableRowWithSelectFor(
                        page,
                        item.Id,
                        Model.SortOrder,
                        Model.SearchString,
                        Model.PageIndex,
                        Model.FixedFilter,
                        Model.FixedValue,
                        Html.DisplayFor(modelItem => item.FirstName),
                        Html.DisplayFor(modelItem => item.LastName),
                        Html.DisplayFor(modelItem => item.IdCode),
                        Html.DisplayFor(modelItem => item.Email),
                        Html.DisplayFor(modelItem => item.DateOfJoining)
                        )
                </tr>
            }
        </tbody>
    </table>

    @if (Model.Trainings.Count != 0)
    {
        <h3>Trainings for Selected Client </h3>
        <table class="table">
            <tr>
                <th>@(GetMember.DisplayName<ParticipantOfTrainingView>(x => x.ClientId))</th>
                <th>@(GetMember.DisplayName<ParticipantOfTrainingView>(x => x.TimetableEntryId))</th>
                <th>@(GetMember.DisplayName<ParticipantOfTrainingView>(x => x.RegistrationTime))</th>
            </tr>

            @foreach (var item in Model.Trainings)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.ClientId) </td>
                    <td> @Html.DisplayFor(modelItem => item.TimetableEntryId) </td>
                    <td> @Html.DisplayFor(modelItem => item.RegistrationTime) </td>
                </tr>
            }

        </table>
    }
</body>